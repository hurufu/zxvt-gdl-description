eq(A, A) :- ns_eq(ns(A, S), ns(A, S)).
le(A, B) :- ns_le(ns(A, _), ns(B, _)).
lt(A, B) :- ns_lt(ns(A, _), ns(B, _)).
add(A, B, C) :- ns_add(ns(A, _), ns(B, _), ns(C, _)).
