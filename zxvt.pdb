valid_row(I) :-
    max_row(MaxRow) &
    le(1, I) & le(I, MaxRow).

valid_col(I) :-
    max_col(MaxCol) &
    le(1, I) & le(I, MaxCol).

valid_rc(rc(Row, Column)) :-
    valid_row(Row) &
    valid_col(Column).

