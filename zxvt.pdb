ns_add(ns(0, 0), B, B) :-
    ns_val(B).
ns_add(A, B, C) :-
    ns_suc(Am1, A) &
    ns_add(Am1, B, X) &
    ns_suc(X, C) &
    ns_val(B).
ns_suc(ns(An, As), ns(Bn, succ(As))) :-
    ns_val(ns(An, As)) &
    ns_val(ns(Bn, succ(As))).
ns_le(A, A) :-
    ns_val(A).
ns_le(A, B) :-
    ns_suc(X, B) &
    ns_le(A, X) &
    ns_val(A).
ns_eq(A, A) :-
    ns_val(A).
ns_lt(A, B) :-
    ns_suc(X, B) &
    ns_le(A, X).

